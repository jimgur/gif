{
  "name": "vid2gif",
  "description": "Create a GIFs from Youtube videos.",
  "version": "0.1",
  
  "permissions": [
    "activeTab",
    "tabs",
    "clipboardWrite",
    "unlimitedStorage",
    {"fileSystem": ["write"]},
    "clipboardRead",
    "clipboardWrite",
    "<all_urls>"
  ],
  
  "content_scripts" : [
    {
      "matches" : [ "*://*.youtube.com/*" ],
      "js" : [ "vid2gif.js" ],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  
  "manifest_version": 2
}